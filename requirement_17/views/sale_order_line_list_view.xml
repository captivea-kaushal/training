<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_line_req_17__tree_view" model="ir.ui.view">
        <field name="name">Sale Order Line Request 17 Tree View</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <tree string="Sale Order Lines" create="false">
                <field name="name"/>
                <field name="order_id"/>
                <field name="product_id"/>
                <field name="product_uom_qty"/>
                <field name="price_unit"/>
                <field name="price_subtotal"/>
                <field name="state" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="sale_order_line_view_action" model="ir.actions.act_window">
        <field name="name">Sale Order Line View Action</field>
        <field name="res_model">sale.order.line</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="requirement_17.sale_order_line_req_17__tree_view"/>
        <field name="target">current</field>
    </record>

</odoo>