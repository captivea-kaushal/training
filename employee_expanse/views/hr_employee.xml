<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="custom_view_employee_form_smartbutton" model="ir.ui.view">
        <field name="name">custom.view.employee.form.smartbutton</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <!--    <field name="priority" eval="1001"/>-->
        <field name="arch" type="xml">
            <xpath expr="//sheet//div[@name='button_box']" position="inside">
                <button name="action_new_smart_button"
                        class="oe_stat_button"
                        icon="fa-smart-button-icon"
                        type="object">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">Employee</span>
                        <span class="o_stat_text">Expanses</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>