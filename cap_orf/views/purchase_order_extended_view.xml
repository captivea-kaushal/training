<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="purchase_order_extended_orf_view" model="ir.ui.view">
        <field name="name">purchase.order.extended.orf.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group[2]/field[@name='date_order']" position="after">
                <field name="destination_detail"/>
                <field name="purchase_orf_id"/>
            </xpath>
            <xpath expr="//field[@name='date_approve']" position="attributes">
                <attribute name="string">PO DATE</attribute>
            </xpath>
        </field>
    </record>
</odoo>