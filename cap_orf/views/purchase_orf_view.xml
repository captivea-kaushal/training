<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="purchase_orf_view_tree" model="ir.ui.view">
        <field name="name">purchase.orf.view.tree</field>
        <field name="model">purchase.orf</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="vendor_name_id"/>
                <field name="vendor_reference"/>
                <field name="po_date"/>
                <field name="destination_detail"/>
                <field name="state" decoration-success="state in ('confirm')"
                                       decoration-info="state == 'orf_in_progress'"
                                       decoration-muted="state == 'draft'"
                                       optional="show" widget="badge" class="text-dark"/>
            </tree>
        </field>
    </record>

    <record id="purchase_orf_view_form" model="ir.ui.view">
        <field name="name">purchase.orf.view.form</field>
        <field name="model">purchase.orf</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,orf_in_progress,confirm"/>
                    <button name="action_orf_in_progress" string="In Progress" type="object" states="draft"
                            class="oe_highlight"/>
                    <button name="action_confirm_purchase" string="Confirm Purchase" type="object"
                            states="orf_in_progress" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1 class="d-flex">
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="vendor_name_id"/>
                            <field name="vendor_reference"/>
                            <field name="currency_id"/>
                            <field name="destination_detail"/>
                        </group>
                        <group>
                            <field name="po_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="order_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_image" widget="image" class="oe_avatar"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="unit_price"/>
                                    <field name="subtotal"/>
                                </tree>
                            </field>
                            <group class="oe_right">
                                <field name="total_tax" widget="monetary" class="oe_right"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="purchase_orf_view_kanban" model="ir.ui.view">
        <field name="name">purchase.orf.view.kanban</field>
        <field name="model">purchase.orf</field>
        <field name="arch" type="xml">
            <kanban>
                    <field name="name"/>
                    <field name="vendor_name_id"/>
                    <field name="po_date"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    <field name="name"/>
                                </div>
                                <field name="po_date" />
                                <field name="vendor_name_id"/>
                            </div>
                        </t>
                    </templates>
            </kanban>
        </field>
    </record>

    <record id="purchase_orf_tree_form_kanban_action" model="ir.actions.act_window">
        <field name="name">Purchase Orf</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.orf</field>
        <field name="view_mode">form</field>
        <field name="help" type="html">
              <p class="o_view_nocontent_empty_folder">
                No Records found!
              </p>
        </field>
    </record>

    <record id="purchase_orf_tree_action" model="ir.actions.act_window">
        <field name="name">Purchase Orf</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.orf</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
              <p class="o_view_nocontent_empty_folder">
                No Records found!
              </p>
        </field>
    </record>

    <menuitem id="purchase_orf_root" name="ORF" sequence="1" action="purchase_orf_tree_action"/>
    <menuitem id="purchase_orf_tree_form_menu" parent="purchase_orf_root" name="Order Request Form(ORF)" action="purchase_orf_tree_form_kanban_action"/>




    <record id="purchase_orf_vendor_action" model="ir.actions.act_window">
        <field name="name">Purchase Orf Vendor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form,search</field>
        <field name="context">{'default_is_company': True}</field>
        <field name="help" type="html">
          <p>
            Odoo helps you track all activities related to your contacts.
          </p>
        </field>
    </record>

    <menuitem id="purchase_orf_tree_form_vendor_menu" parent="purchase_orf_root" name="Vendor" action="purchase_orf_vendor_action"/>

    <record id="purchase_orf_product_action" model="ir.actions.act_window">
        <field name="name">Purchase Orf Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">kanban,tree,form,search</field>
        <field name="context">{'default_is_company': True}</field>
        <field name="help" type="html">
          <p>
            Odoo helps you track all activities related to your contacts.
          </p>
        </field>
    </record>

    <menuitem id="purchase_orf_tree_form_product_menu" parent="purchase_orf_root" name="Product" action="purchase_orf_product_action"/>

</odoo>