<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="module_category_purchase_orf" model="ir.module.category">
        <field name="name">Users Purchase ORF</field>
        <field name="description">Category Purchase ORF</field>
    </record>

    <record id="group_own_purchase_orf" model="res.groups">
        <field name="name">Own ORF</field>
        <field name="category_id" ref="module_category_purchase_orf"/>
    </record>

    <record id="group_admin_purchase_orf" model="res.groups">
        <field name="name">Admin ORF</field>
        <field name="category_id" ref="module_category_purchase_orf"/>
    </record>

    <record id="rule_own_purchase_orf" model="ir.rule">
        <field name="name">Own Purchase ORF</field>
        <field name="model_id" ref="model_purchase_orf"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('cap_orf.group_own_purchase_orf'))]"/>
    </record>
</odoo>