<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_sale_order_form_custom_button" model="ir.ui.view">
        <field name="name">sale.order.form.custom.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_confirm']" position="before">
                <button name="action_confirm_and_validate_delivery"
                        string="Confirm Order and Validate Delivery"
                        type="object"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>
