<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="cap_marketing_crm_automation_inherit_view" model="ir.ui.view">
        <field name="name">cap.marketing.crm.automation.inherit</field>
        <field name="model">marketing.activity</field>
        <field name="inherit_id" ref="marketing_automation.marketing_activity_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='activity_type']" position="after">
                <field name="activity_type" invisible="1"/>
                <field name="company_id"
                       invisible="activity_type != 'opportunity'"
                       required="activity_type == 'opportunity'"/>
                <field name="medium_id"
                       invisible="activity_type != 'opportunity'"
                       required="activity_type == 'opportunity'"/>
                <field name="source_id"
                       invisible="activity_type != 'opportunity'"
                       required="activity_type == 'opportunity'"/>
                <field name="team_id"
                       invisible="activity_type != 'opportunity'"
                       required="activity_type == 'opportunity'"/>
                <field name="description"
                       invisible="activity_type != 'opportunity'"
                       required="activity_type == 'opportunity'"/>
            </xpath>
        </field>
    </record>
</odoo>
