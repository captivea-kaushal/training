<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="cap_res_partner_inherit_view" model="ir.ui.view">
        <field name="name">cap.res.partner.inherit.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='city']" position="after">
                <field name="marketing_language" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="cap_res_partner_inherit_form_view" model="ir.ui.view">
        <field name="name">cap.res.partner.inherit.form.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lang']" position="after">
                <field name="marketing_language"/>
            </xpath>
        </field>
    </record>

    <record id="view_res_partner_filter_lang" model="ir.ui.view">
        <field name="name">view.res.partner.filter.inherit.lang</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='inactive']" position="before">
                <filter name="marketing_language_en" string="Marketing language English" domain="[('marketing_language', '=', 'en')]"/>
                <filter name="marketing_language_fr" string="Marketing language French" domain="[('marketing_language', '=', 'fr')]"/>
            </xpath>
        </field>
    </record>
</odoo>
