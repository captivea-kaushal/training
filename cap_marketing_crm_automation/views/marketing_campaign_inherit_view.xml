<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="marketing_campaign_inherit_view" model="ir.ui.view">
        <field name="name">cap.marketing.campaign.inherit</field>
        <field name="model">marketing.campaign</field>
        <field name="inherit_id" ref="marketing_automation.marketing_campaign_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_show_opportunity"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-handshake-o icon">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Opportunity</span>
                        </div>
                    </button>
            </xpath>
        </field>
    </record>
</odoo>