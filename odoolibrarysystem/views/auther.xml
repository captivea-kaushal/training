<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_auther_tree" model="ir.ui.view">
        <field name="name">auther.tree.view</field>
        <field name="model">library.auther</field>
        <field name="arch" type="xml">
            <tree>
                <field name="auther_name"/>
            </tree>
        </field>
    </record>

    <record id="view_auther_form" model="ir.ui.view">
        <field name="name">auther.form.view</field>
        <field name="model">library.auther</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="auther_name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_auther" model="ir.actions.act_window">
        <field name="name">auther</field>
        <field name="res_model">library.auther</field>
        <field name="view_mode">tree,form</field>
    </record>
     <menuitem id="student_auther_menu" name="Auther" parent="menu_student_root_menu_data"
              action="action_auther"/>
</odoo>
