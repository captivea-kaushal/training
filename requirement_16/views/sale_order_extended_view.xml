<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_view_req_16_extended" model="ir.ui.view">
        <field name="name">Sale order extension req16</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button name="action_manage_deposits" type="object" string="Manage Deposits" attrs="{'invisible': [('order_line', '=', [])]}"/>
            </xpath>
        </field>
    </record>
</odoo>