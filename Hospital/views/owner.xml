<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_owner_patient_tree" model="ir.ui.view">
        <field name="name">hospital.owner.tree</field>
        <field name="model">hospital.owner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="owner_name"/>
            </tree>
        </field>
    </record>

    <record id="view_owner_patient_form" model="ir.ui.view">
        <field name="name">hospital.owner.form</field>
        <field name="model">hospital.owner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="owner_name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_owner_patient" model="ir.actions.act_window">
        <field name="name">owner</field>
        <field name="res_model">hospital.owner</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_owner"
              name="owner"
              parent="menu_hospital_operations_sub"
              action="Hospital.action_owner_patient"/>
</odoo>

