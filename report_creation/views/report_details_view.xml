<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="report_creation_report_details_view_form" model="ir.ui.view">
        <field name="name">report_creation.report_details.form</field>
        <field name="model">report_creation.report_details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="shipper_company_logo"/>
                        <field name="company_logo_details"/>
                        <field name="certificate_date"/>
                        <field name="shipper"/>
                        <field name="consignee"/>
                        <field name="bl_no"/>
                        <field name="bl_date"/>
                        <field name="invoice_no"/>
                        <field name="invoice_date"/>
                        <field name="batch_no"/>
                        <field name="manufacturing_date"/>
                        <field name="expiry_date"/>
                        <field name="total_net_weight"/>
                        <field name="seal_no"/>
                        <field name="container_no"/>
                        <field name="authorise_signatory"/>
                    </group>
                </sheet>
            </form>

        </field>
    </record>

    <record id="report_creation_report_details_view_tree" model="ir.ui.view">
        <field name="name">report_creation.report_details.tree</field>
        <field name="model">report_creation.report_details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="shipper_company_logo"/>
                <field name="company_logo_details"/>
                <field name="certificate_date"/>
                <field name="shipper"/>
                <field name="consignee"/>
                <field name="bl_no"/>
                <field name="bl_date"/>
                <field name="invoice_no"/>
                <field name="invoice_date"/>
                <field name="batch_no"/>
                <field name="manufacturing_date"/>
                <field name="expiry_date"/>
                <field name="total_net_weight"/>
                <field name="seal_no"/>
                <field name="container_no"/>
                <field name="authorise_signatory"/>
            </tree>

        </field>
    </record>

    <record id="action_report_creation_report_details" model="ir.actions.act_window">
        <field name="name">Create</field>
        <field name="res_model">report_creation.report_details</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="report_creation_root" name="Reports"/>
    <menuitem id="report_creation_batch_release_cert" name="Batch Release Certificate" parent="report_creation_root" action="action_report_creation_report_details"/>


</odoo>