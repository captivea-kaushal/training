<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_mysale_tree" model="ir.ui.view">
        <field name="name">mysale.tree.view</field>
        <field name="model">my.saledata</field>
        <field name="arch" type="xml">
            <tree>
                <field name="hos_owner_name"/>
                <!--                <field name="subject_name"/>-->
                <!--                <field name="book_lang"/>-->
            </tree>
        </field>
    </record>

    <record id="view_mysale_form" model="ir.ui.view">
        <field name="name">mysale.form.view</field>
        <field name="model">my.saledata</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="hos_owner_name"/>

                        <field name="name"/>
                        <field name="dob"/>
                        <field name="gender"/>
                        <field name="is_child"/>
                        <field name="notes"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sale" model="ir.actions.act_window">
        <field name="name">my_sale_data</field>
        <field name="res_model">my.saledata</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_mysale_root" name="Mysale"/>

    <menuitem id="menu_mysale_sub_root" parent="menu_mysale_root" name="my sale data" sequence="0"/>

    <menuitem id="menu_sale" parent="menu_mysale_sub_root" name="my sale data 1" sequence="0"
              action="action_sale"/>
</odoo>
