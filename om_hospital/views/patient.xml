<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="['|','|',
                                                        ('name', 'ilike', self),
                                                        ('ref', 'ilike', self),('age','ilike',self)]"
                       string="patient name"/>
                <!--                <field name="ref" string="Reference number "/>-->
                <!--                <field name="age"/>-->
                <!--               <separator />-->
                <filter name="filter_male" string="Male" domain="[('gender','=','male')]"/>
                <separator/>
                <filter name="filter_female" string="Female" domain="[('gender','=','female')]"/>
                <separator/>
                <!--                <filter name="Filter_kids" string="kids" domain="[('dob', '&lt;=', 5)]"/>-->
                <separator/>
                <filter name="filter_archived" string="Active" domain="[('is_true','=',False)]"/>

                <group expand="0" string="Group By">
                    <filter string="Gender" name="gender" domain="[]" context="{'group_by': 'gender'}"/>
                </group>
                <!--                for using searchpanel bar-->
                <searchpanel>
                    <field name="gender" icon="fa-bars" select="multi" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.form.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <!--            <tree decoration-success="calc_age &lt; 15">-->
            <tree decoration-success="calc_age &lt; 15" export_xlsx="0">
                <field name="name"/>
                <field name="student_dob"/>
                <field name="calc_age"/>
                <field name="ref"/>
                <field name="gender"/>
                <field name="is_true"/>
                <!--                decoration-success = "state == 'done'"-->
                <!--                       decoration-info = "state == 'draft'"-->
                <!--                       decoration-danger = "state == 'cancel'"-->
                <!--                        decoration-warning = "state == 'cancel'"-->
            </tree>
        </field>
    </record>

