<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_order_new_view_form" model="ir.ui.view">
        <field name="name">sale.order.new.view.form</field>
        <field name="model">sale.button</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sale_order_new" model="ir.actions.act_window">
        <field name="name">Sales Button</field>
        <field name="res_model">sale.button</field>
        <field name="view_mode">form</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="target">new</field>
    </record>
</odoo>