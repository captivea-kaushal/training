<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">student.tree.view</field>
        <field name="model">student.school</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="l_name"/>
                <field name="age"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.form.view</field>
        <field name="model">student.school</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1 style="text-align: center;">STUDENT FORM</h1>
<!--                    &lt;!&ndash;                    <h1>-->
<!--                    &lt;!&ndash;                        <field name="f_name" placeholder=" Student Name"/>-->
<!--                    &lt;!&ndash;                    </h1>-->
                    <group>
                        <group string="STUDENT INFORMATION">
                            <field name="name"/>
                            <field name="l_name"/>
                            <field name="age"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="dob"/>
                            <field name="gender"/>
                            <field name="highest_qualification"/>
                        </group>
                        <group string="Address">
                            <field name="address1"/>
                            <field name="address2"/>
                            <field name="state"/>
                            <field name="pincode"/>
                            <field name="country"/>
                        </group>
                        <group string="Parent/Guardian information">
                            <field name="father_name"/>
                            <field name="f_age"/>
                            <field name="f_occupation"/>
                            <field name="f_phone"/>
                            <field name="moth_name"/>
                            <field name="m_age"/>
                            <field name="m_occupation"/>
                            <field name="parent_annual_income"/>
                        </group>

                        <group string="Address">
                            <field name="f_address1"/>
                            <field name="f_address2"/>
                            <field name="f_pincode"/>
                            <field name="country1"/>
                            <field name="state1"/>
                        </group>
                    </group>

                    <group>
                        <notebook>
                            <page string=" Student Result" name="result tab">
                                <field name="school_student_ids">
                                    <form>
                                        <group>
                                            <group>
                                                <field name="result_id" optional="hide"/>
                                                <field name="subject_id"/>
                                                <field name="marks_obtained"/>
                                                <field name="sub_code"/>
                                            </group>
                                            <group>
                                                <field name="min_marks"/>
                                                <field name="max_marks"/>
                                                <field name="result_status"/>
                                                <!--                                                <field name="result_id" optional="hide"/>-->
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>


                            <page string="Qualification" name="Qualification tab">
                                <field name="qualification_ids">
                                    <form>
                                        <group>
                                            <group>
                                                <field name="qualification_relation_id"/>
                                                <!--                                                <field name="college"/>-->
                                                <field name="student_degree_id"/>
                                            </group>
                                            <group>
                                                <field name="percentage"/>
                                                <field name="grade"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                        <group>
                            <field name="total"/>
                            <field name="obtain_marks_percent"/>
                            <field name="total_percent"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_student" model="ir.actions.act_window">
        <field name="name">student data</field>
        <field name="res_model">student.school</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_student_root_menu_data" name="School management"/>

    <menuitem id="menu_student_sub_menu_data" name="SCHOOL" parent="menu_student_root_menu_data"/>

    <menuitem id="student_profile_menu" name="Student" parent="menu_student_root_menu_data"
              action="action_student"/>

</odoo>
