<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_degree_tree" model="ir.ui.view">
        <field name="name">degree.tree.view</field>
        <field name="model">student.degree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="degree_name"/>
            </tree>
        </field>
    </record>

    <record id="view_degree_form" model="ir.ui.view">
        <field name="name">degree.form.view</field>
        <field name="model">student.degree</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="degree_name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_degree" model="ir.actions.act_window">
        <field name="name">degree</field>
        <field name="res_model">student.degree</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="student_degree_menu" name="Degree" parent="menu_student_root_menu_data"
              action="action_degree"/>
</odoo>
